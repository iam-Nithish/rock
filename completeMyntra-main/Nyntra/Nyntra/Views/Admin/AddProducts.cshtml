@model Nyntra.Models.Product
@{
    ViewBag.Title = "AddProducts";
    Layout = "~/Views/Admin_LayoutPage1.cshtml";
}














<!DOCTYPE html>
<html dir="ltr" lang="en">


<head>
    <style>
        <style >
        /* Style the form container */
        .form-horizontal {
            max-width: 600px; /* Limit the width of the form */
            margin: 20px auto; /* Center the form horizontally */
            padding: 20px; /* Add padding inside the form */
            border: 1px solid #dee2e6; /* Border around the form */
            border-radius: 0.5rem; /* Rounded corners */
            background-color: #f8f9fa; /* Light background color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        /* Style for each form group */
        .form-group {
            margin-bottom: 1.5rem; /* Space between form groups */
        }

            /* Style for labels */
            .form-group label {
                font-weight: bold; /* Bold labels */
                margin-bottom: 0.5rem; /* Space below labels */
            }

        /* Style for input fields */
        .form-control {
            border: 1px solid #ced4da; /* Input border */
            border-radius: 0.25rem; /* Rounded corners for inputs */
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075); /* Inner shadow */
        }

            /* Focus effect on inputs */
            .form-control:focus {
                border-color: #80bdff; /* Border color on focus */
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Shadow on focus */
            }

        /* Style for the submit button */
        .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
            border-color: #007bff; /* Border color */
            padding: 10px 20px; /* Padding inside the button */
            font-size: 1rem; /* Button text size */
        }

            /* Hover effect for the button */
            .btn-primary:hover {
                background-color: #0056b3; /* Darker shade on hover */
                border-color: #004085; /* Darker border on hover */
            }


    </style>

   
</head>

<body>

    <div class="page-wrapper">

        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Add Product</h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item"><a href="Index" class="text-muted">Menu</a></li>
                                <li class="breadcrumb-item text-muted active" aria-current="page">Product List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        <select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                            <option selected>Aug 19</option>
                            <option value="1">July 19</option>
                            <option value="2">Jun 19</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">



                                @using (Html.BeginForm("AddProducts", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4 class="mb-3">Add New Product</h4> <!-- Added heading for the form -->

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ProductName)
                                        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ProductPrice)
                                        @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ProductDescription)
                                        @Html.TextBoxFor(model => model.ProductDescription, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Category)
                                        @Html.TextBoxFor(model => model.Category, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Color)
                                        @Html.TextBoxFor(model => model.Color, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Brand)
                                        @Html.TextBoxFor(model => model.Brand, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Status)
                                        @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label for="ImageFile">Upload Product Image</label>
                                        <input type="file" name="ImageFile" id="ImageFile" class="form-control-file" />
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Add" class="btn btn-primary">
                                       
                                    </div>

                                </div>
                                }



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script src="~/Conetent/Admin/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Conetent/Admin/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Conetent/Admin/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/Conetent/Admin/dist/js/app-style-switcher.js"></script>
    <script src="~/Conetent/Admin/dist/js/feather.min.js"></script>
    <script src="~/Conetent/Admin/assets/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Conetent/Admin/dist/js/sidebarmenu.js"></script>

    <script src="~/Conetent/Admin/dist/js/custom.min.js"></script>
</body>

</html>


